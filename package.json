{
  "name": "nuxt-app",
  "private": true,
  "scripts": {
    "build": "nuxi build --dotenv .env.production",
    "dev": "nuxi dev --dotenv .env.local",
    "generate": "nuxi generate --dotenv .env.production",
    "preview": "nuxi preview",
    "start": "nuxi start",
    "postinstall": "nuxi prepare",
    "cleanup": "nuxi cleanup",
    "lint:js": "eslint --ext \".ts,.vue,.js\" --ignore-path .gitignore .",
    "lint:prettier": "prettier --check .",
    "lint": "yarn lint:js && yarn lint:prettier",
    "lintfix": "prettier --write --list-different . && yarn lint:js --fix",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "lint:style": "stylelint \"**/*.{css,scss,vue}\" --ignore-path .gitignore --fix"
  },
  "lint-staged": {
    "**/*.{tsx,ts,jsx,js,vue}": [
      "yarn lint:js"
    ],
    "**/*.{css,scss,vue}": [
      "yarn lint:style"
    ]
  },
  "devDependencies": {
    "@nuxt/types": "^2.16.3",
    "@nuxtjs/dotenv": "^1.4.1",
    "@nuxtjs/eslint-config-typescript": "^12.0.0",
    "@pinia-plugin-persistedstate/nuxt": "^1.1.1",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.57.0",
    "axios": "^1.3.5",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-vue": "^9.10.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.0",
    "nuxt": "^3.3.2",
    "postcss": "^8.4.21",
    "postcss-html": "^1.5.0",
    "postcss-scss": "^4.0.6",
    "prettier": "^2.8.7",
    "sass": "^1.60.0",
    "sass-loader": "^13.2.2",
    "stylelint": "^15.4.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-standard": "^32.0.0",
    "stylelint-config-standard-scss": "^7.0.1",
    "stylelint-config-standard-vue": "^1.0.0",
    "typescript": "^4.9.4",
    "vite-plugin-checker": "^0.5.6",
    "vite-plugin-vuetify": "^1.0.2",
    "vue-loader": "^16.8.3",
    "vue-tsc": "^1.2.0"
  },
  "dependencies": {
    "@pinia/nuxt": "^0.4.7",
    "lodash": "^4.17.21",
    "moment": "^2.29.4"
  }
}
